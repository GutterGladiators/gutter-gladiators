---
// data
import { type TestimonialItem } from '@config/testimonialData';
import { Icon } from 'astro-icon/components';

const { name, testimonial } = Astro.props as TestimonialItem;
---

<div class='flex justify-between'>
	<figure class='mx-auto max-w-2xl'>
		<p class='sr-only'>5 out of 5 stars</p>
		<div class='flex gap-x-1'>
			<Icon name='star' class='size-6 text-yellow-500' aria-hidden='true' />
			<Icon name='star' class='size-6 text-yellow-500' aria-hidden='true' />
			<Icon name='star' class='size-6 text-yellow-500' aria-hidden='true' />
			<Icon name='star' class='size-6 text-yellow-500' aria-hidden='true' />
			<Icon name='star' class='size-6 text-yellow-500' aria-hidden='true' />
		</div>
		<blockquote
			class='mt-10 text-lg font-semibold leading-8 tracking-tight text-gray-900 sm:leading-9'
		>
			<p>“{testimonial}”</p>
		</blockquote>
		<figcaption class='mt-10 flex items-center gap-x-6'>
			<Icon name='avatar' class='text-5xl' />
			<div class='text-sm leading-6'>
				<div class='font-semibold text-gray-900'>{name}</div>
			</div>
		</figcaption>
	</figure>
</div>
