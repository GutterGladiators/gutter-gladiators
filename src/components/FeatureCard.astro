---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
// import { Icon } from "astro-icon";

// components
// import Button from "@components/Button.astro";

interface Props {
	title: string;
	details: string;
	image: ImageMetadata;
	imageSide: 'left' | 'right';
	idx: number; //
}

const { image, title, details, imageSide } = Astro.props;
---

<div
	class='mx-auto grid max-w-2xl items-center gap-8 rounded-xl md:gap-12 lg:max-w-none lg:grid-cols-2 lg:gap-20'
>
	<!-- text -->
	<div class:list={[imageSide === 'left' ? 'lg:order-last' : '', 'col-span-1 flex flex-col ']}>
		<h2 class='h2 font-bold capitalize tracking-tight'>{title}</h2>
		<p class='description mt-4 text-gray-600'>{details}</p>
	</div>

	<!-- image -->
	<div class=''>
		<Image class='relative h-full max-w-full rounded object-cover' src={image} alt={title} />
	</div>
</div>
