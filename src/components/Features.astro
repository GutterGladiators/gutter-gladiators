---
/**
 * * These are alternating side cards with titles, text, and images
 * Recommend using 2 or 3 cards in a row
 */

// components
import FeatureCard from '@components/FeatureCard.astro';
// images
import image2 from '@images/ute.jpg';
import type { ImageMetadata } from 'astro';

interface ServiceItem {
	image: ImageMetadata; // an imported image
	id: string;
	title: string;
	details: string;
}

// data
const serviceData: ServiceItem[] = [
	{
		image: image2,
		id: 'gutter-cleaning',
		title: 'Residential, Commercial and Industrial Gutter Cleaning',
		details: `Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed vestibulum libero nec nunc accumsan, vel bibendum tellus venenatis. Nullam eleifend, nisi at sollicitudin mattis, ante velit fermentum nulla, at sagittis eros quam sit amet justo.`
	},
	{
		image: image2,
		id: 'solar-panel-cleaning',
		title: 'Solar Panel Cleaning',
		details: `Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed vestibulum libero nec nunc accumsan, vel bibendum tellus venenatis. Nullam eleifend, nisi at sollicitudin mattis, ante velit fermentum nulla, at sagittis eros quam sit amet justo.`
	},
	{
		image: image2,
		id: 'vacuum-gutter-cleaning',
		title: 'We take the waste with us',
		details: `A game-changer in gutter cleaning for Tasmanian home and property owners. This state-of-the-art system ensures a highly efficient and comprehensive cleaning process. It excels in removing leaves, debris, and blockages seamlessly, leaving no residue or mess, revolutionising the traditional approach to gutter maintenance.`
	}
];
---

<section id='services' class='overflow-hidden bg-white'>
	<div class='container'>
		<div class='mx-auto flex max-w-2xl sm:justify-center'>
			<h2 class='h1'>What we offer</h2>
		</div>
		<div class='mt-10 flex flex-col gap-16 md:mt-16 md:gap-24'>
			{
				serviceData.map((feature, idx) => (
					<FeatureCard
						id={feature.id}
						title={feature.title}
						details={feature.details}
						image={feature.image}
						imageSide={idx % 2 === 0 ? 'right' : 'left'}
						idx={idx}
						fadeEffect={idx % 2 === 0 ? 'fade-left' : 'fade-right'}
						fadeDelay='.2'
					/>
				))
			}
		</div>
	</div>
</section>
