---
import { Icon } from 'astro-icon/components';

interface Props {
	text: string[];
	location?: string;
}

const { text, location } = Astro.props;
---

<div class='relative bg-primary py-2 text-sm font-medium text-default'>
	<div class='mx-auto flex max-w-7xl justify-between truncate px-6'>
		<ul class='hidden space-x-4 text-default lg:flex'>
			{
				text.map((t) => (
					<li class='flex items-center space-x-2'>
						<Icon name='arrow-r' />
						<span>{t}</span>
					</li>
				))
			}
		</ul>

		<div class='flex items-center space-x-2'>
			<Icon name='arrow-r' />
			<p class='text-default'>{location}</p>
		</div>
	</div>
</div>
