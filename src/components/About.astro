---
import Logo from '@assets/images/shieldlogo.png';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

import Button from './Button.astro';
import Card from './Card.astro';

interface CardInfo {
	icon: string;
	title: string;
	content: string;
}

const aboutData: CardInfo[] = [
	{
		icon: 'award',
		title: 'State-of-the-Art Equipment',
		content:
			'We invest in the latest technology and equipment to deliver superior results. With advanced cleaning tools and techniques, Gutter Gladiators ensures thorough and effective cleaning for your gutters and solar panels.'
	},
	{
		icon: 'clock',
		title: 'Downpipe Inspections and Repairs',
		content:
			'Downpipe Inspections and Repairs involve meticulous evaluation and fixing of drainage pipes, ensuring smooth water flow and preventing leaks or blockages.'
	},
	{
		icon: 'verified',
		title: 'Fully Licensed and insured',
		content:
			'Opt for our fully licensed and insured gutter cleaning and solar panel services. Our expert team ensures compliant care, providing thorough cleaning and complete liability protection for your peace of mind.'
	},
	{
		icon: 'location',
		title: 'Local Expertise',
		content:
			"We understand the unique challenges that Tasmanian homeowners face. With Gutter Gladiators, you're not just getting a service provider you're getting a trusted neighbor who is committed to your home's well-being"
	}
];
---

<div class='bg-base py-16 sm:py-24' id='about'>
	<div class='mx-auto max-w-7xl px-6 lg:px-8'>
		<div class='gap-8 lg:flex'>
			<div class='mx-auto lg:mx-0 lg:max-w-2xl'>
				<h2 class='mt-2 text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl'>
					Choose The Professionals
				</h2>
				<p class='mt-6 text-lg leading-8 text-gray-600'>
					At Gutter Gladiators, we specialise in gutter cleaning, solar panel cleaning, and exterior
					cleaning services across the beautiful North West coast of Tasmania, including Devonport,
					Ulverstone, Burnie, and Port Sorell.
				</p>

				<p class='mt-6 text-lg leading-8 text-gray-600'>
					Our expert team is dedicated to keeping your gutters clear, maximizing the efficiency of
					your solar panels, and enhancing the overall appearance of your home. Trust us to deliver
					professional and thorough cleaning solutions, ensuring your property remains in pristine
					condition year-round.
				</p>

				<!-- <div class='mt-6 flex items-center gap-2'>
					<Icon name='clock' class='text-3xl' />
					<span class='sm:text-lg'> Speedy Services with great availability </span>
				</div> -->
				<!-- <div class='mt-6 hidden items-end gap-8 sm:flex'>
					<Button text='0400 000 000' variant='primary' icon='phone-r' size='lg' />
					<Button text='Get a quote' variant='outline' icon='arrow-r' size='lg' />
				</div>

				<div class='mt-6 flex items-end gap-4 sm:hidden lg:justify-center'>
					<Button text='0400 000 000' variant='primary' icon='phone-r' />
					<Button text='Get a quote' variant='outline' icon='arrow-r' />
				</div> -->

				<div
					class='s mt-12 flex w-full flex-col items-center justify-start gap-4 smMob:flex-row sm:justify-start'
				>
					<Button
						text='0400 000 000'
						href='tel:0400000000'
						variant='primary'
						class='w-full sm:h-14 sm:w-auto sm:text-lg'
					>
						<Icon name='phone-r' />
					</Button>
					<Button
						text='Get a quote'
						href='#contact'
						variant='outline'
						icon='arrow-r'
						class='w-full sm:h-14 sm:w-auto sm:text-lg'
					>
						<Icon name='arrow-r' />
					</Button>
				</div>
			</div>

			<div class='ml-auto hidden justify-center lg:flex lg:items-center'>
				<Image src={Logo} alt='logo' width={300} />
			</div>
		</div>

		<!--GRID -->
		<div class='grid gap-4 pt-16 sm:grid-cols-2 lg:grid-cols-4'>
			{
				aboutData.map(({ icon, title, content }) => (
					<Card icon={icon} title={title} content={content} />
				))
			}
		</div>
	</div>
</div>
